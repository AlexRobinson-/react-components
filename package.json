{
  "name": "micro-react-components",
  "version": "1.0.0",
  "description": "Zendesk Garden Design System React Components",
  "main": "index.js",
  "repository": "git@github.com:zendeskgarden/react-components.git",
  "author": "Zendesk Gardeners <garden@zendesk.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna exec -- git clean -Xdf . && lerna bootstrap --concurrency=2",
    "start": "node ./utils/scripts/scoped-npm-command --script start",
    "build": "lerna run build --stream",
    "build:single": "node ./utils/scripts/scoped-npm-command --script build",
    "lint": "lerna run lint --stream",
    "lint:single": "node ./utils/scripts/scoped-npm-command --script lint",
    "test": "jest --watch --config=utils/test/jest.config.js",
    "test:travis": "jest --runInBand --config=utils/test/jest.config.js",
    "styleguide": "lerna run build:styleguide --stream --concurrency=2 && npm run styleguide:publish",
    "styleguide:single": "node ./utils/scripts/scoped-npm-command --script styleguide",
    "styleguide:publish": "gh-pages --dist demo --dest micro",
    "tag": "lerna publish",
    "tag:test": "npm run lint && npm run test:travis && npm run build",
    "tag:changelog": "lerna exec --concurrency 1 --since HEAD~1 -- ../../utils/scripts/update-changelog.js",
    "travis": "npm run publish:test && yarn lerna exec -- \"npm publish ./dist\" --since=HEAD~1 --bail=false --ignore=styleguide"
  },
  "devDependencies": {
    "@zendesk/garden-svg-icons": "^2.5.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.6",
    "babel-loader": "^7.1.2",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-styled-components": "^1.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.3.0",
    "commander": "^2.12.2",
    "del": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.15.0",
    "eslint-config-pretty-standard": "^1.1.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-react": "^7.5.1",
    "gh-pages": "^1.1.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-flatten": "^0.4.0",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "inline-svg-react": "^0.1.8",
    "inquirer": "^5.0.0",
    "jest": "^22.0.6",
    "jest-styled-components": "^4.9.0",
    "lerna": "^2.6.0",
    "lodash": "^4.17.4",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-svg-inline": "^2.0.1",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "simple-git": "^1.85.0",
    "styled-components": "^2.4.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.2.1",
    "url": "^0.11.0",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.2"
  },
  "dependencies": {
    "jest-enzyme": "^4.0.2",
    "react-styleguidist": "^6.1.0"
  }
}
