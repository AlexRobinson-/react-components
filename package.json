{
  "private": true,
  "name": "@zendeskgarden/react-components",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "build:single": "node ./utils/scripts/scoped-npm-command --script build",
    "build:styleguide": "lerna run build:styleguide --stream",
    "format": "yarn format:package_json && yarn format:js && yarn format:markdown",
    "format:js": "prettier --write \"packages/**/!(node_modules|dist|demo)/*.js\" && prettier --write utils/**/*.js",
    "format:markdown": "prettier --write \"packages/**/!(node_modules|dist|demo)/!(CHANGELOG)*.md\"",
    "format:package_json": "prettier-package-json --write && lerna exec -- prettier-package-json --write",
    "postinstall": "lerna clean --yes --stream && lerna bootstrap --stream",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:markdown",
    "lint:css": "stylelint packages/*/src/**/*.js && stylelint utils/**/*.js",
    "lint:js": "eslint packages/*/src/**/*.js && eslint utils/**/*.js",
    "lint:markdown": "markdownlint packages/*/src/**/*.md packages/*/README.md",
    "new": "./utils/scripts/create-package.js",
    "start": "node ./utils/scripts/scoped-npm-command --script start",
    "start:demo": "yarn build:styleguide && serve demo",
    "tag": "yarn travis:script && lerna publish --conventional-commits",
    "test": "jest --watch --config=utils/test/jest.config.js",
    "test:all": "jest --runInBand --config=utils/test/jest.config.js",
    "travis:before_deploy": "yarn build",
    "travis:github_pages": "yarn build:styleguide && ./utils/scripts/publish-gh-pages.js",
    "travis:publish": "./utils/scripts/publish-packages.js",
    "travis:script": "yarn lint && yarn test:all"
  },
  "devDependencies": {
    "@types/react": "^16.0.36",
    "@zendesk/eslint-config-garden": "^4.0.0",
    "@zendesk/garden-css-variables": "^3.1.0",
    "@zendesk/garden-stylelint-config": "^6.0.0",
    "@zendesk/garden-svg-icons": "^2.5.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.6",
    "babel-loader": "^7.1.2",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-styled-components": "^1.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chalk": "^2.3.0",
    "commander": "^2.12.2",
    "del": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.6.2",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-flatten": "^0.4.0",
    "handlebars": "^4.0.11",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.15.0-beta.16",
    "identity-obj-proxy": "^3.0.0",
    "inline-svg-react": "^0.1.8",
    "inquirer": "^5.0.0",
    "jest": "^22.0.6",
    "jest-enzyme": "^4.0.2",
    "jest-styled-components": "^4.11.0-1",
    "lerna": "^2.7.1",
    "lodash": "^4.17.4",
    "markdownlint-cli": "^0.7.0",
    "prettier": "^1.10.2",
    "prettier-package-json": "^1.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-styleguidist": "^6.2.5",
    "react-svg-inline": "^2.0.1",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "serve": "^6.4.8",
    "simple-git": "^1.85.0",
    "styled-components": "^3.1.6",
    "stylelint": "^8.4.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^0.7.0",
    "stylelint-processor-styled-components": "^1.2.1",
    "svg-react-loader": "^0.4.5",
    "url": "^0.11.0",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint"
    }
  }
}
